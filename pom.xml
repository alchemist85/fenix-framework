<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    
    <modelVersion>4.0.0</modelVersion>

    <groupId>pt.ist</groupId>
    <artifactId>fenix-framework</artifactId>
    <version>2.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Fenix Framework</name>
    <url>http://fenix-ashes.ist.utl.pt</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <modules>
        <module>fenix-framework-project</module>
        <module>fenix-framework-dml-compiler</module>
        <module>dml-maven-plugin</module>
        <module>new-fenix-framework-core</module>
        <module>fenix-framework-adt-bplustree</module>
        <module>fenix-framework-indexes</module>
        <module>fenix-framework-bplustree-domain-object</module>
    	<module>fenix-framework-backend-mem</module>
        <module>fenix-framework-backend-infinispan</module>
        <module>fenix-framework-archetypes</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.8.1</version>
                <configuration>
                    <!-- get all sub-projects -->
                    <aggregate>true</aggregate>
                    <!-- 
                         use pretty UML graph. Note about UmlGraph: You must
                         have the Graphviz binary in your PATH, or the images
                         will not be generated. For more information about
                         Graphviz, please refer to http://www.graphviz.org/
                    -->
                    <doclet>org.umlgraph.doclet.UmlGraphDoc</doclet>
                    <docletArtifact>
                        <groupId>org.umlgraph</groupId>
                        <artifactId>doclet</artifactId>
                        <version>5.1</version>
                    </docletArtifact>
                    <additionalparam>-views</additionalparam>
                    <useStandardDocletOptions>true</useStandardDocletOptions>
                </configuration>
            </plugin>
        </plugins>
    </build> 

    <distributionManagement>
        <repository>
            <id>fenix-framework-releases</id>
            <url>https://fenix-ashes.ist.utl.pt/nexus/content/repositories/fenix-framework-releases</url>
        </repository>
        <snapshotRepository>
            <id>fenix-framework-snapshots</id>
            <url>https://fenix-ashes.ist.utl.pt/nexus/content/repositories/fenix-framework-snapshots</url>
        </snapshotRepository>
    </distributionManagement>
</project>
